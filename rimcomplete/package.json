{
  "name": "rimcomplete",
  "main": "./lib/main",
  "version": "0.1.0",
  "description": "Autocomplete for RimWorld XML modding",
  "keywords": [
    "rimworld",
    "autocomplete",
    "xml"
  ],
  "activationHooks": ["language-xml:grammar-used"],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "configSchema": {
    "rimworldPath": {
      "type": "string",
      "default": "",
      "title": "RimWorld Installation Path",
      "description": "Path to your RimWorld installation folder (e.g., C:\\Program Files (x86)\\Steam\\steamapps\\common\\RimWorld)"
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "4.0.0": "provide"
      }
    }
  }
}
